<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="start">
    <TextView
        android:id="@+id/bio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_font_size"
        android:gravity="center"
        android:text="Personal Profile"
        />
    <TextView
        android:id="@+id/bio_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_font_size"
        android:textColor="@color/navy"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:id="@+id/bio_img"
            android:padding="8dp"
            android:layout_width="@dimen/profile_img"
            android:layout_height="@dimen/profile_img"
            android:src="@drawable/profile_placeholder"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bio_age_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Age:"
                android:textColor="@color/pale_orange"
                android:textSize="@dimen/small_font_size"
                />
            <TextView
                android:id="@+id/bio_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_small_font_size"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bio_sex_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/pale_orange"
                android:text="Sex:"
                />
            <TextView
                android:id="@+id/bio_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_small_font_size"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bio_height_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/pale_orange"
                android:text="Height:"
                android:textSize="@dimen/small_font_size"
                />
            <TextView
                android:id="@+id/bio_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_small_font_size"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bio_weight_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/pale_orange"
                android:text="Weight:"
                android:textSize="@dimen/small_font_size"
                />
            <TextView
                android:id="@+id/bio_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_small_font_size"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/edit_bio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pale_orange"
        android:textSize="@dimen/small_font_size"
        android:text="@string/edit_profile"
        />
</LinearLayout>
