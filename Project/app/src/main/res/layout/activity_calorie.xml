<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Weather.WeatherActivity">

    <TextView
        android:id="@+id/calorieText"
        android:text="Calories"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seekBarContainer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/seekBarContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calorieText">

        <TextView
            android:id="@+id/goalText"
            android:text="Weight Goal"
            android:textAlignment="center"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/goalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/goalText">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/goalSeekBar"
                android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                android:max="4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_toLeftOf="@id/goalValueText"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/goalValueText"
                android:text="Value"
                android:textSize="24dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/activityText"
            android:text="Activity Level"
            android:textAlignment="center"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="32dp"
            android:layout_below="@id/goalContainer"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/activityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/activityText">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/activitySeekBar"
                android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                android:max="2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_toLeftOf="@id/activityValueText"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/activityValueText"
                android:text="Value"
                android:textSize="24dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBarContainer">

        <Button
            android:id="@+id/resetButton"
            android:text="Reset"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/saveButton"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:text="Save"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_toRightOf="@id/resetButton"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>