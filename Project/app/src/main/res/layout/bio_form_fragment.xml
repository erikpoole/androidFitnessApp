<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start">

    <Spinner
        android:id="@+id/bio_form_sex"
        android:paddingTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
    android:id="@+id/bio_form_ft"
    android:paddingTop="16dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/bio_form_inch"
        android:paddingTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/bio_form_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_placeholder"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/bio_form_upload_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_image"
        />

    <TextView
        android:id="@+id/bio_form_weight_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <SeekBar
        android:id="@+id/bio_form_weight"
        android:max="400"
        android:progress="150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/bio_form_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        />

    <EditText
        android:id="@+id/bio_form_city"
        android:paddingTop="16dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_city"
        android:autofillHints="@string/enter_city"
        />

    <EditText
        android:id="@+id/bio_form_country"
        android:paddingTop="16dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_country"
        android:autofillHints="@string/enter_country"
        />

</LinearLayout>